<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
    >
    <ImageView
        android:id="@+id/noti_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        />
    <ImageButton
        android:id="@+id/noti_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/none"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/noti_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/none"
        android:scaleType="fitXY"
        android:layout_marginEnd="18dp"
        />
    <ImageButton
        android:id="@+id/noti_play"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:background="@color/none"
        android:scaleType="fitXY"
        android:layout_toStartOf="@id/noti_next"
        android:layout_marginEnd="6dp"
        />
    <TextView
        android:id="@+id/noti_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/noti_icon"
        android:layout_toStartOf="@id/noti_play"
        android:layout_marginTop="6dp"

        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"

        android:text="@string/no_song"
        android:textColor="@color/noneblack"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/noti_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/noti_icon"
        android:layout_toStartOf="@id/noti_play"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"

        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"

        android:textColor="@color/noneblack"
        android:textSize="@dimen/lrc"
        />

</RelativeLayout>